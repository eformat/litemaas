apiVersion: v1
kind: Secret
metadata:
  name: backend-secret
  labels:
    app: backend
    component: api
type: Opaque
stringData:
  # Database Configuration
  database-url: postgresql://litemaas_admin:${PG_ADMIN_PASSWORD}@postgres:5432/litemaas_db?sslmode=disable
  # CORS Configuration
  cors-origin: https://litemaas-${NAMESPACE}.apps.${CLUSTER_DOMAIN_NAME}
  # JWT Configuration
  jwt-secret: ${JWT_SECRET}
  # OAuth Configuration - REPLACE WITH YOUR ACTUAL VALUES
  oauth-client-id: ${OAUTH_CLIENT_ID}
  oauth-client-secret: ${OAUTH_CLIENT_SECRET}
  oauth-issuer: https://oauth-openshift.apps.${CLUSTER_DOMAIN_NAME}
  oauth-callback-url: https://litemaas-${NAMESPACE}.apps.${CLUSTER_DOMAIN_NAME}/api/auth/callback
  # Admin Configuration
  admin-api-keys: ${ADMIN_API_KEY}
  # LiteLLM Integration
  litellm-api-key: ${LITELLM_API_KEY}
