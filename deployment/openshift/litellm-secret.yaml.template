apiVersion: v1
kind: Secret
metadata:
  name: litellm-secret
  labels:
    app: litellm
    component: ai-proxy
type: Opaque
stringData:
# Database Configuration - separate database for LiteLLM
  database-url: postgresql://litemaas_admin:${PG_ADMIN_PASSWORD}@postgres:5432/litellm_db
# LiteLLM Configuration
  master-key: ${LITELLM_API_KEY}
  ui-username: ${LITELLM_UI_USERNAME}
  ui-password: ${LITELLM_UI_PASSWORD}
